<Page x:Class="Vakhitova_GlazkiSave.AgentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Vakhitova_GlazkiSave"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AgentPage" FontFamily="Century Gothic">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <TextBox Name="TBSearch" FontSize="15" Width="250" Margin="5"
                     TextChanged="TBSearch_TextChanged"></TextBox>

            <ComboBox Name="CBSort" SelectionChanged="CBSort_SelectionChanged" FontSize="15" 
                      Width="300" Margin="5">
                <TextBlock>Сортировка</TextBlock>
                <TextBlock>Наименование по возрастанию</TextBlock>
                <TextBlock>Наименование по убыванию</TextBlock>
                <TextBlock>Скидка по возрастанию</TextBlock>
                <TextBlock>Скидка по убыванию</TextBlock>
                <TextBlock>Приоритет по возрастанию</TextBlock>
                <TextBlock>Приоритет по убыванию</TextBlock>
            </ComboBox>

            <ComboBox Name="CBFilt" FontSize="15" Width="100" Margin="5"
                      SelectionChanged="CBFilt_SelectionChanged">
                <TextBlock>Все типы</TextBlock>
                <TextBlock>ЗАО</TextBlock>
                <TextBlock>МКК</TextBlock>
                <TextBlock>МФО</TextBlock>
                <TextBlock>ОАО</TextBlock>
                <TextBlock>ООО</TextBlock>
                <TextBlock>ПАО</TextBlock>
            </ComboBox>
        </StackPanel>
        
        <ListView Name="AgentListView" Grid.Row="1" SelectionChanged="AgentListView_SelectionChanged">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Black" BorderThickness="1">
                        <Grid Background="{Binding FonStyle}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"></ColumnDefinition>
                                <ColumnDefinition Width="650"></ColumnDefinition>
                                <ColumnDefinition Width="50"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <Image Grid.Row="0" Grid.Column="0" Grid.RowSpan="4" Height="100"
                                   Stretch="Uniform" Margin="10" Source="{Binding Logo, TargetNullValue=pics\picture.png}"></Image>
                            
                            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                                <TextBlock Text="{Binding AgentTypeName}" FontSize="20"></TextBlock>
                                <TextBlock Text=" | " FontSize="20"></TextBlock>
                                <TextBlock Text="{Binding Title}" FontSize="20"></TextBlock>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
                                <TextBlock Text="{Binding SalesForYear}" FontSize="15"></TextBlock>
                                <TextBlock Text=" продаж за год" FontSize="15"></TextBlock>
                            </StackPanel>

                            <TextBlock Grid.Row="2" Grid.Column="1" 
                                       Text="{Binding Phone}" FontSize="15"></TextBlock>

                            <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal">
                                <TextBlock Text="Приоритетность: " FontSize="15"></TextBlock>
                                <TextBlock Text="{Binding Priority}" FontSize="15"></TextBlock>
                            </StackPanel>

                            <StackPanel Grid.Row="0" Grid.RowSpan="4" Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding Discount}" FontSize="20"></TextBlock>
                                <TextBlock Text="%" FontSize="20"></TextBlock>
                            </StackPanel>
                                        
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Button Content="Изменить приоритет на. ." Name="ChangePriorityBtn" Width="200" FontSize="15"
                Click="ChangePriorityBtn_Click" Visibility="Hidden"></Button>

            <Button Content="Добавить агента" Name="AddAgentBtn" FontSize="15" Width="200" Margin="5, 0, 0, 0"
                    Click="AddAgentBtn_Click" Visibility="Hidden"></Button>
        </StackPanel>
    </Grid>
</Page>
